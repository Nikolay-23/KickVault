@model IEnumerable<KickVault.Models.Item>

<h2>All Items</h2>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Brand</th>
            <th>Model</th>
            <th>Size</th>
            <th>Price</th>
            <th>Description</th>
            <th>ReleaseDate</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.ImageURL</td>
                <td>@item.Model</td>
                <td>@item.Size</td>
                <td>$ @item.Price</td>
                <td>@item.Description</td>
                <td>@item.ReleaseDate.ToString("yyyy-MM")</td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info">Details</a>
                    @if(User?.Identity?.IsAuthenticated ?? false)
                    {
                        <form asp-asp-controller="FavoriteItem" asp-action="AddFavoriteItem" method="post" class="d-inline">
                            <input type="hidden" name="itemId" value="@item.Id" />
                            <button type="submit" class="btn btn-warning">+FavoriteItme</button>
                        </form>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Create" class="btn btn-primary">Add New Item</a>