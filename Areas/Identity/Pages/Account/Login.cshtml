@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}
<div class="body-fm">
 <div class="-LogIn-">
 <div class="row">
            <div class="title-of-LogIn">
                <h4>Log In</h4>
            </div>
       <div class="col-md-4 move-input-1">
        <section>
            <form id="account" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                <div class="form-floating mb-3 input-width">
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com"/>
                    <label asp-for="Input.Email" class="form-label">Email</label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3 input-width">
                    <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="password" />
                    <label asp-for="Input.Password" class="form-label">Password</label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="log-in-button">
                    <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">Log in</button>
                </div>
            </form>
        </section>
                <p class="link-to-register">Need an account?<a href="https://localhost:7035/Identity/Account/Register" class="link-to-register-a">SignUp</a></p>
    </div>
  </div>
 </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
